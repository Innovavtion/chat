generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @unique @default(autoincrement())
  role     Role   @relation(fields: [roleId], references: [id])
  roleId   Int    @default(1)
  email    String @unique
  login    String
  password String
}

model Role {
  id   Int    @id @unique @default(autoincrement())
  role String @unique
  User User[]
}
